@model CreateCampaignModel
@{
    ViewData["Title"] = "Create Campaign";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}
<script src="~/tinymce/tinymce.min.js"></script>
<script>tinymce.init({ selector: "#Body" });</script>


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>General Form</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">General Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Create Campaign</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <div class="card-body">
                            <partial name="_ActionMessage" model="@Model.Response" />
                            <form asp-area="user" asp-controller="campaign" asp-action="AddCampaign" method="post" enctype="multipart/form-data">
                                <div class="card-body">

                                    <div class="form-group">
                                        <label for="ServiceName">Name</label>
                                        <input type="text" class="form-control" asp-for="Name" placeholder="Enter Subject">
                                    </div>
                                    <div class="form-group">
                                        <label for="ServiceName">Subject</label>
                                        <input type="text" class="form-control" asp-for="Subject" placeholder="Enter Subject">
                                    </div>
                                    <div class="form-group">
                                        <label for="Description">Body</label>
                                        <input type="text" class="form-control" asp-for="Body" placeholder="Email Body">
                                    </div>
                                    <div class="form-group">
                                        <label for="Description">Date Time</label>
                                        <input type="datetime-local" class="form-control" asp-for="Datetime" placeholder="Enter Date">
                                    </div>
                                    <div class="form-group">
                                        <label for="Description">Body</label>
                                        <input type="number" class="form-control" asp-for="GroupId" placeholder="Email Body">
                                    </div>
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" asp-for="Status" /> Status
                                        </label>
                                    </div>

                                </div>
                                <!-- /.card-body -->

                                <div class="card-footer">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>
</div>